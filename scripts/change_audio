#!/bin/sh

step="5"

notify () {
    volume="$(pamixer --get-volume)"
    muted="$(pamixer --get-mute)"

    if [[ "$volume" -ge "80" ]]; then
        icon="ðŸ”Š"
    elif [[ "$volume" -ge "40" ]]; then
        icon="ðŸ”‰"
    else
        icon="ðŸ”ˆ"
    fi

    if [[ "$muted" == "false" ]]; then
        volume="$(pamixer --get-volume)"
    else
        icon="ðŸ”‡"
        volume="0"
    fi

    dunstify -h string:x-dunst-stack-tag:audio -h int:value:"$volume" \
             --appname=mediactl "$icon $(pamixer --get-volume-human)"
}

if [[ "$1" = "--inc" ]]; then
    pamixer -i "$step" &
    pamixer -u &
    notify &

elif [[ "$1" == "--dec" ]]; then
    pamixer -d "$step" &

    if [[ "$(expr "$(pamixer --get-volume)" - "10")" -le "0" ]]; then
        pamixer -m &
    fi

    notify &

elif [[ "$1" == "--mute" ]]; then
    pamixer -t &
    notify &

else
    echo "usage: change_audio [--inc]/[--dec]"
    exit 1
fi
