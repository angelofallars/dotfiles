{
  "custom/window-prefix": {
    "format": "<span color='#bac2de'> </span>",
    "tooltip": false
  },
  "hyprland/window": {
    "format": "{title}",
    "rewrite": {
      "(.*) — Ablaze Floorp": "$1",
      "(.*) — Zen Browser": "$1",
      "(.*) - Discord": "$1"
    },
    "separate-outputs": true,
    "icon": true
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "",
    "all-outputs": false,
    "active-only": false,
    "show-special": true,
    "persistent-workspaces": {
      "*": [
        11,
        12,
        13,
        14,
        15,
        16,
        17,
        18
      ]
    },
    "format-icons": {
      "11": "一",
      "12": "二",
      "13": "三",
      "14": "四",
      "15": "五",
      "16": "六",
      "17": "七",
      "18": "八",
      "19": "九",
      "20": "十"
    }
  },
  "tray": {
    "icon-size": 26,
    "spacing": 7,
    "reverse-direction": true
  },
  "pulseaudio": {
    "scroll-step": 2,
    "format": "{icon}{volume}%",
    "format-muted": "<span color=\"#b4befe\">󰝟 </span>...",
    "format-icons": {
      "default": [
        "<span color=\"#89b4fa\"> </span>"
      ],
      "headphone": [
        "<span color=\"#89b4fa\">󰋋 </span>"
      ]
    },
    "on-click": "pamixer -t"
  },
  "group/cpu-memory": {
    "orientation": "inherit",
    "modules": [
      "cpu",
      "memory"
    ]
  },
  "custom/pacman": {
    "format": "{icon}{0}",
    "return-type": "json",
    "format-icons": {
      "pending-updates": "<span color=\"#f38ba8\"> </span>",
      "updated": "<span color=\"#f5c2e7\"></span>"
    },
    "exec-if": "which waybar-updates",
    "exec": "waybar-updates"
  },
  "disk": {
    "interval": 5,
    "path": "/home",
    "format": "<span color=\"#fab387\"></span> {free} free"
  },
  "cpu": {
    "interval": 1,
    "format": "<span color=\"#f9e2af\"> </span>{usage}%  "
  },
  "memory": {
    "interval": 1,
    "format": "<span color=\"#a6e3a1\"> </span>{used:0.1f}G/{total:0.1f}G RAM"
  },
  "clock": {
    "format": "{:%a %b %d    %I:%M %p %Z}",
    "timezones": [
      "Asia/Manila",
      "Australia/Sydney"
    ],
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "format": {
        "months": "<span color='#a6e3a1'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'>{}</span>",
        "weeks": "<span color='#74c7ec'><b>W{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span background='#f38ba8' color='#1e1e2e'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click": "tz_up",
      "on-click-right": "tz_down",
      "on-click-forward": "shift_up",
      "on-click-backward": "shift_down",
      "on-click-middle": "mode"
    }
  },
  "custom/gpu-temp": {
    "format": "<span color=\"#f38ba8\">RX  </span>{}°C",
    "interval": 1,
    "escape": true,
    "exec": "/usr/bin/bash -c 'echo $(($(cat /sys/class/drm/card0/device/hwmon/hwmon1/temp1_input) / 1000))'"
  },
  "custom/artix": {
    "format": "",
    "tooltip": false
  },
  "cava": {
    "framerate": 165,
    "autosens": 1,
    "sensitivity": 3,
    "bars": 30,
    "lower_cutoff_freq": 50,
    "higher_cutoff_freq": 14000,
    "method": "pulse",
    "stereo": false,
    "reverse": false,
    "bar_delimiter": 0,
    "monstercat": false,
    "waves": true,
    "noise_reduction": 0.33,
    "input_delay": 2,
    "hide_on_silence": false,
    "sleep_timer": 5,
    "format-icons": [
      " ",
      "▁",
      "▁",
      "▁",
      "▁",
      "▁",
      "▁",
      "▁",
      "▁",
      "▂",
      "▂",
      "▂",
      "▂",
      "▂",
      "▂",
      "▂",
      "▂",
      "▃",
      "▃",
      "▃",
      "▃",
      "▃",
      "▃",
      "▃",
      "▃",
      "▄",
      "▄",
      "▄",
      "▄",
      "▄",
      "▄",
      "▄",
      "▄",
      "▅",
      "▅",
      "▅",
      "▅",
      "▅",
      "▅",
